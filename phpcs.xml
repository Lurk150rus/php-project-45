<?xml version="1.0"?>
<ruleset name="Hexlet">
    <description>Coding Standards for Hexlets project</description>
    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg name="parallel" value="100"/>
    <arg value="p"/>

    <exclude-pattern>*/vendor/*</exclude-pattern>

    <rule ref="PSR12" />
    <rule ref="Squiz.NamingConventions.ValidVariableName.NotCamelCaps"/>
    <rule ref="Squiz.NamingConventions.ValidFunctionName.NotCamelCaps"/>

    <!-- Отключаем требование _ для приватных свойств -->
    <rule ref="Squiz.NamingConventions.ValidPrivateMemberName">
        <severity>0</severity>
    </rule>

    <!-- Отключаем требование _ для приватных методов -->
    <rule ref="Squiz.NamingConventions.ValidFunctionName.Private">
        <severity>0</severity>
    </rule>
</ruleset>